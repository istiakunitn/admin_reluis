<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <% if resource.new_record? %>
        <%= f.input :email %>
        <%= f.input :username %>
    <% end %>

    <%= f.input :institution %>


    <%= f.input :current_password, hint: 'Please give your current password to change your information' %>
    <%= f.input :password, hint: 'Leave blank if you don\'t want to change it' %>
    <%= f.input :password_confirmation %>

    <%= f.action :submit, label: resource.new_record? ? 'Sign Up' : 'Update' %>
<% end %>